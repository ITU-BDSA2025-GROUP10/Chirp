@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}


<div>
    <h2> Public Timeline </h2>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="cheepbox">
            <h3>What's on your mind @routeName</h3>
            <form method="post">
                <input style="float: left" type="text" asp-for="Text" maxlength="160" id="cheepText">
                <span asp-validation-for="Text" class="text-danger"></span>
                <input type="submit" value="Share">
                <div style="text-align: right; margin-top: 5px; clear: both;">
                    <small><span id="charCount">160</span> characters remaining</small>
                </div>
            </form>
        </div>
        <script>
            const textInput = document.getElementById('cheepText');
            const charCount = document.getElementById('charCount');

            textInput.addEventListener('input', function() {
                const remaining = 160 - this.value.length;
                charCount.textContent = remaining;
            });
        </script>
    }

    <script>
        // Toggle comments dropdown
        function toggleComments(cheepId) {
            const container = document.getElementById(`comments-${cheepId}`);
            const icon = document.getElementById(`icon-${cheepId}`);

            if (container.style.display === 'none') {
                container.style.display = 'block';
                icon.textContent = '▲';
                // Load comments if not already loaded
                loadComments(cheepId);
            } else {
                container.style.display = 'none';
                icon.textContent = '▼';
            }
        }

        // Load comments for a specific cheep
        async function loadComments(cheepId) {
            const commentsList = document.getElementById(`comments-list-${cheepId}`);

            // Check if already loaded
            if (commentsList.dataset.loaded === 'true') return;

            try {
                // Fetch comments from the server using Razor Pages handler
                const response = await fetch(`/?handler=Comments&cheepId=${cheepId}`);
                if (!response.ok) {
                    commentsList.innerHTML = '<p style="color: #888; font-size: 12px;">Unable to load comments.</p>';
                    return;
                }

                const comments = await response.json();

                if (comments.length === 0) {
                    commentsList.innerHTML = '<p style="color: #888; font-size: 12px;">No comments yet. Be the first to comment!</p>';
                } else {
                    commentsList.innerHTML = comments.map(c => `
                        <div class="comment-item">
                            <strong>${c.authorName}</strong> ${c.text}
                            <br><small>${new Date(c.timeStamp).toLocaleString()}</small>
                        </div>
                    `).join('');
                }

                commentsList.dataset.loaded = 'true';
            } catch (error) {
                commentsList.innerHTML = '<p style="color: #888; font-size: 12px;">Error loading comments.</p>';
            }
        }
    </script>
    
    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="Cheeplist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>

                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @if (User.Identity?.IsAuthenticated == true && cheep.Author != User.Identity.Name)
                        {
                            if (cheep.isFollowed)
                            {
                                <form method="post" asp-page-handler="Unfollow" style="display:inline">
                                    <input type="hidden" name="author" value="@cheep.Author" />
                                    <input type="hidden" name="pageIndex" value="@Model.PageIndex" />
                                    <button class="nav-link btn btn-link p-0" type="submit">
                                        Unfollow
                                    </button>
                                </form> 
                            }
                            else
                            {
                                <form method="post" asp-page-handler="follow" style="display:inline">
                                    <input type="hidden" name="author" value="@cheep.Author" />
                                    <input type="hidden" name="pageIndex" value="@Model.PageIndex" />
                                    <button class="nav-link btn btn-link p-0" type="submit">
                                        follow
                                    </button>
                                </form> 
                            }
                           
                        }
                        <br>
                        @cheep.Cheep
                        <br>
                        <small>&mdash; @cheep.Timestamp</small>

                        <!-- Comment Section -->
                        <div class="comment-section">
                            <button class="comment-toggle" onclick="toggleComments(@cheep.Id); return false;">
                                <span class="comment-count">@cheep.CommentCount comment@(cheep.CommentCount != 1 ? "s" : "")</span>
                                <span class="dropdown-icon" id="icon-@cheep.Id">▼</span>
                            </button>

                            <div id="comments-@cheep.Id" class="comments-container" style="display: none;">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <form method="post" asp-page-handler="Comment" class="comment-form">
                                        <input type="hidden" name="cheepId" value="@cheep.Id" />
                                        <input type="hidden" name="pageIndex" value="@Model.PageIndex" />
                                        <input type="text" name="commentText" placeholder="Write a comment..." maxlength="100" required />
                                        <button type="submit">Post</button>
                                    </form>
                                }

                                <div id="comments-list-@cheep.Id" class="comments-list">
                                    <!-- Comments will be loaded here -->
                                </div>
                            </div>
                        </div>

                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

<div class="pagination">
    @if (Model.HasPreviousPage)
    {
        <a href="?pageIndex=@(Model.PageIndex - 1)">Previous</a>
    }

    <span>Page @Model.PageIndex</span>

    @if (Model.HasNextPage)
    {
        <a href="?pageIndex=@(Model.PageIndex + 1)">Next</a>
    }
</div>