@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}


<div>
    <h2> Public Timeline </h2>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="cheepbox">
            <h3>What's on your mind @routeName</h3>
            <form method="post">
                <input style="float: left" type="text" asp-for="Text" maxlength="160" id="cheepText">
                <span asp-validation-for="Text" class="text-danger"></span>
                <input type="submit" value="Share">
                <div style="text-align: right; margin-top: 5px; clear: both;">
                    <small><span id="charCount">160</span> characters remaining</small>
                </div>
            </form>
        </div>
        <script>
            const textInput = document.getElementById('cheepText');
            const charCount = document.getElementById('charCount');

            textInput.addEventListener('input', function() {
                const remaining = 160 - this.value.length;
                charCount.textContent = remaining;
            });
        </script>
    }
    
    @if (Model.Cheeps != null && Model.Cheeps.Any())
    {
        <ul id="Cheeplist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <form method="post" asp-page-handler="Follow" style="display:inline">
                                <input type="hidden" name="author" value="@cheep.Author" />
                                <input type="hidden" name="pageIndex" value="@Model.PageIndex" />
                                <button class="nav-link btn btn-link p-0" type="submit">
                                    follow
                                </button>
                            </form>
                        }
                        <br>
                        @cheep.Cheep
                        <br>
                        <small>&mdash; @cheep.Timestamp</small>
                    
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

<div class="pagination">
    @if (Model.HasPreviousPage)
    {
        <a href="?pageIndex=@(Model.PageIndex - 1)">Previous</a>
    }

    <span>Page @Model.PageIndex</span>

    @if (Model.HasNextPage)
    {
        <a href="?pageIndex=@(Model.PageIndex + 1)">Next</a>
    }
</div>